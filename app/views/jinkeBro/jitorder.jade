link(rel='stylesheet', href='css/backend/backend.css')
block content
    jason-pagecontent(action='/jinkeBro/order/order' conf='paginationConf')
        div.modal.fade(id="Edit",tabindex="-1",role="dialog",aria-labelleby="myModalLabel",aria-hidden="true")
            div.modal-dialog
                div.modal-content
                   div.modal-body 
                        h4.modal-title(id="myModalLabel") 订单修改
                          button.close(type="button",data-dismiss="modal")
                            span(aria-hidden="true")&times;                
                        table.table.table-striped.table-bordered.text-center
                            thead
                                tr
                                  th 订单ID
                                  th 订单状态
                                  th 状态修改
                            tbody
                                tr
                                    td {{order.OrderID}}
                                    td {{order.OrderStatus}}
                                    td 
                                      select(ng-model='order.OrderStatus')
                                         option(ng-repeat="item in orderStatus",value='{{item.DictionaryID}}') {{item.DictionaryValue}}
                        button.btn.btn-info.pull-right(ng-click="saveOrderEdit()") 确定
                        button.btn.btn-default(type="button",data-dismiss="modal") Close
        div.modal.fade(id="Details",tabindex="-1",role="dialog",aria-labelleby="myModalLabel",aria-hidden="true")
            div.modal-dialog
                div.modal-content
                   div.modal-body 
                        h4.modal-title(id="myModalLabel") 订单详情
                          button.close(type="button",data-dismiss="modal")
                            span(aria-hidden="true")&times;                
                        table.table.table-striped.table-bordered.text-center
                            thead
                                tr
                                  th 订单ID
                                  th 订单详情
                            tbody
                                tr
                                    td {{a.RoleID}}
                                    td {{a.RoleName}}
                        button.btn.btn-default(type="button",data-dismiss="modal") Close
        div.modal.fade(id="Allocate",tabindex="-1",role="dialog",aria-labelleby="myModalLabel",aria-hidden="true")
            div.modal-dialog
                div.modal-content
                   div.modal-body 
                        h4.modal-title(id="myModalLabel") 分配
                          button.close(type="button",data-dismiss="modal")
                            span(aria-hidden="true")&times;                
                        table.table.table-striped.table-bordered.text-center
                            thead
                                tr
                                  th 订单ID
                                  th 配送员
                            tbody
                                tr
                                    td {{a.RoleID}}
                                    td 
                                      jason-select.form-control(ng-model='f.UserName',source='/backuser',stext='UserName',svalue='UserName' )
                        button.btn.btn-default(type="button",data-dismiss="modal") Close
        div.page-content
            ng-form.form-inline
                span.title 订单管理
                    div.buttons.pull-right
                        label.form-group.my-form-group
                            a.btn.btn-sm.btn-primary(ng-click='search()')
                                i.icon.icon-search   查询
                            a.btn.btn-sm.btn-success(href='#/jinkeBro/jitorderAdd')
                                i.icon.icon-plus 新建
                            a.btn.btn-sm.btn-info(ng-click='search()' class='btn btn-sm btn-default')
                                i.icon.icon-repeat  刷新
            hr
            table.table.table-striped.table-bordered.text-center
                thead
                    tr
                        th 序号
                        th 订单ID
                        th 支付方式
                        td 是否有效
                        th 下单时间
                        th 配送状态
                        th 操作
                tbody
                    tr(ng-repeat="x in datas" )
                        td {{$index+1}}
                        td {{x.OrderID}}
                        td {{x.PayMethodDesc}}
                        td {{x.IsActiveDesc}}
                        td {{x.OrderTime}}
                        td {{x.OrderStatusDesc}}
                        td
                            a(data-toggle="modal" ,data-target="#Edit",ng-click="jitOrderEdit(x.OrderID,x.OrderStatusDesc)",href='' )
                                i.icon.icon-edit 修改
                            a(data-toggle="modal" ,data-target="#Allocate",ng-click="moreuser($index,'userrole/userID/')",href='')
                                i.icon.icon-edit 分配
                            a(data-toggle="modal",data-target="#Details",ng-click="moreuser($index,'userrole/userID/')",href='')
                                i.icon.icon-zoom-in  订单详情
            div.pull-right
                jason-pagination(conf='paginationConf')



