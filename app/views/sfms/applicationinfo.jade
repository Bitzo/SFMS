link(rel='stylesheet' href="css/backend/role.css")
block content
  div.container-fluid(action='/app' conf='paginationConf' ng-controller="baseController")
    span 
      h2 应用新增
    form(method="post",name="appinfo" )
      table.table.table-bordered.table-hover.definedwidth.m10
        tr
          td(width="15%",class="tableleft") ID int
          td
            input(type="text",name="ID",ng-model='app.ID',ng-maxlength='11')
            &nbsp&nbsp
            small.error(ng-show="app.ID.$error.maxlength && app.ID.$touched") ID最多11位

        tr
          td(width="15%",class="tableleft") 应用CODE varchar
          td
            input(type="text",name="ApplicationCode",ng-model='app.ApplicationCode',ng-maxlength='50')
            &nbsp&nbsp
            small.error(ng-show="app.ApplicationCode.$error.maxlength && app.ApplicationCode.$touched") 应用CODE最多50位

           
        tr
          td(width="15%",class="tableleft") 	应用名称 varchar
          td
            input(type="text",name="ApplicationName",ng-model="app.ApplicationName",ng-maxlength='50')
            &nbsp&nbsp
            small.error(ng-show="app.ApplicationName.$error.maxlength && app.ApplicationName.$touched") 应用名称最多50位
           

        tr
          td(width="15%",class="tableleft") 	备注（可选） varchar
          td
            input(type="text",name="Memo",ng-model='app.Memo',ng-maxlength='200')
            &nbsp&nbsp
            small.error(ng-show="app.Memo.$error.maxlength && app.Memo.$touched") 备注最多200位

            
        tr
          td(class="tableleft") 	是否有效
          td
            input(type="radio",name="IsActive",value="1",ng-model="app.IsActive",checked)
            有效
            &nbsp&nbsp            
            input(type="radio",name="IsActive",ng-model="app.IsActive",value="0")
            无效


        tr
          td(class="tableleft")
          td
            button.btn.btn-sm.btn-primary(type="submit",ng-click="submitappa(app)") 添加
 
            &nbsp&nbsp&nbsp&nbsp
            a.btn.btn-sm.btn-success(href='#sfms/app') 返回列表



 include ../shared/footer.jade  
      