link(rel='stylesheet' href="css/backend/role.css")
block content
  div.container-fluid
    span 
      h2 财务新增
    form(method="post",name="financeAdd" )
      table.table.table-bordered.table-hover.definedwidth.m10      
        tr
          td(width="15%",class="tableleft") 财务名称
          td
            jason-select.input( ng-model='formdata.fiName' source='/datadict/plain' selectparams='{"Category":"dc_finame"}' stext='DictionaryValue' svalue='DictionaryID')
            
        
        tr
          td(width="15%",class="tableleft") 财务类型
          td
            jason-select.input( ng-model='formdata.fiType' source='/datadict/plain' selectparams='{"Category":"dc_fitype"}' stext='DictionaryValue' svalue='DictionaryID')
           
        
        tr
          td(width="15%",class="tableleft") 财务收支
          td
            jason-select.input( ng-model='formdata.inOutType' source='/datadict/plain' selectparams='{"Category":"dc_fiinouttype"}' stext='DictionaryValue' svalue='DictionaryID')
           
        
        tr
          td(width="15%",class="tableleft") 财务金额 
          td
            input(type="number",name="projectPrice",ng-model="formdata.fiPrice",ng-maxlength='10',required)
            &nbsp&nbsp
            small.error(ng-if="financeAdd.Memo.$error.maxlength && financeAdd.Memo.$touched") 金额最多10位

        tr
          td(width="15%",class="tableleft") 所属项目
          td
            jason-select.input( ng-model='formdata.projectID' source='/sfms/api/project' stext='ProjectName' svalue='ID')

        tr
          td(width="15%",class="tableleft") 相关用户
          td
            jason-select.input( ng-model='formdata.userID' source='/backuser' stext='UserName' svalue='AccountID')
     
        tr
          td(width="15%",class="tableleft") 财务描述 
          td
            textarea(type="textview",rows="5",cols="30",name="remark",ng-model='formdata.remark',ng-maxlength='200',required)
            &nbsp&nbsp
            small.error(ng-if="financeAdd.remark.$error.maxlength && financeAdd.remark.$touched") 描述最多200位
        tr
          td(class="tableleft")
          td
            button.btn.btn-sm.btn-primary(type="submit",ng-click="addnew(formdata,'/sfms/api/finance')") 添加
            &nbsp&nbsp&nbsp&nbsp
            a.btn.btn-sm.btn-success(href='#sfms/financeManage') 返回列表




      