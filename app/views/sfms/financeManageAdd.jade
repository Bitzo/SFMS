link(rel='stylesheet' href="css/backend/role.css")
block content
  div.container-fluid(action='/backmenu' conf='paginationConf' ng-controller="baseController")
    span 
      h2 财务新增
    form(method="post",name="appinfo" )
      table.table.table-bordered.table-hover.definedwidth.m10      
        tr
          td(width="15%",class="tableleft") 财务名称
          td
            jason-select.form-control(placeholder='用户名'  style="width:160px;height:34px;" ng-model='formdata.fiName' source='/datadict/plainnof?Category=dc_finame' stext='DictionaryValue' svalue='DictionaryID')
            
        
        tr
          td(width="15%",class="tableleft") 财务类型
          td
            jason-select.form-control(placeholder='用户名'  style="width:160px;height:34px;" ng-model='formdata.fiType' source='/datadict/plainnof?Category=dc_fitype' stext='DictionaryValue' svalue='DictionaryID')
           
        
        tr
          td(width="15%",class="tableleft") 财务收支
          td
            jason-select.form-control(placeholder='用户名'  style="width:160px;height:34px;" ng-model='formdata.inOutType' source='/datadict/plainnof?Category=dc_fiinouttype' stext='DictionaryValue' svalue='DictionaryID')
           
        
        tr
          td(width="15%",class="tableleft") 财务金额 
          td
            input(type="number",name="projectPrice",ng-model="formdata.fiPrice",ng-maxlength='50',style="width:160px;height:30px",required)
            &nbsp&nbsp
            small.error(ng-show="formdata.Memo.$error.maxlength && formdata.Memo.$touched") 备注最多200位

        tr
          td(width="15%",class="tableleft") 所属项目
          td
            jason-select.form-control(placeholder='用户名'  style="width:160px;height:34px;" ng-model='formdata.projectID' source='/sfms/api/project' stext='ProjectName' svalue='ID')

        tr
          td(width="15%",class="tableleft") 相关用户
          td
            jason-select.form-control(placeholder='用户名'  style="width:160px;height:34px;" ng-model='formdata.userID' source='/backuser' stext='UserName' svalue='AccountID')
     
        tr
          td(width="15%",class="tableleft") 财务描述 
          td
            textarea(type="textview",rows="5",cols="30",name="Memo",ng-model='formdata.remark',ng-maxlength='200',required)
            &nbsp&nbsp
            small.error(ng-show="formdata.Memo.$error.maxlength && formdata.Memo.$touched") 备注最多200位
        tr
          td(class="tableleft")
          td
            button.btn.btn-sm.btn-primary(type="submit",ng-click="addnew(formdata,'/sfms/api/finance')") 添加
            &nbsp&nbsp&nbsp&nbsp
            a.btn.btn-sm.btn-success(href='#sfms/financeManage') 返回列表




      