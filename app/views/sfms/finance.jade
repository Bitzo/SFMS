link(rel='stylesheet', href='css/backend/backend.css')   
block content
    div.page-content(action='/api/sign/count',ng-controller='baseController',conf='paginationConf')
      g-form.form-inline
        span(style='font-size: 24px;') 财务显示
        div.buttons.pull-right
          label.form-group.my-form-group
            jason-select.form-control(placeholder='应用名称'  style="width:120px;" ng-model='f.ID' source='/app' stext='ApplicationName' svalue='ID')
          label.form-group.my-form-group
            a.btn.btn-sm.btn-primary(ng-click='search()')
                            i.icon.icon-search   查询
            a.btn.btn-sm.btn-success(ng-href='#/backend/applicationinfo')
              i.icon.icon-plus 新建
            button(ng-click='search()' class='btn btn-sm btn-default') 
              i.icon.icon-repeat  刷新
      hr
      table.table.table-striped.table-bordered.text-center
        thead.text-center 
          tr  
            th 序号 
            th 用户名
            th 菜单名称
            th 菜单路径
            th 操作
        tbody
          tr(ng-repeat="x in datas")
            td {{$index+1}}
            td {{x.userName}}
            td {{x.MenuName}}
            td {{x.Url}} 
            td 更多

      div.pull-right
        jason-pagination(conf='paginationConf')
