link(rel='stylesheet', href='css/backend/backend.css')   
block content
  jason-pagecontent(action='/sfms/api/finance' conf='paginationConf')
    div.page-content
      ng-form.form-inline
        span(style='font-size: 24px;')  财务管理
        div.buttons.pull-right
          label.form-group.my-form-group 
            input.form-control(type='date' style="width:120px;height:34px;" ng-model='f.startTime')
          label.form-group.my-form-group 
            jason-select(placeholder='财务名称' style="width:120px;height:34px;" ng-model='f.projectID' source='/datadict/plainnof?Category=dc_finame' stext='DictionaryValue' svalue='DictionaryID')
          label.form-group.my-form-group 
            jason-select(placeholder='财务类型' style="width:120px;height:34px;" ng-model='f.ProjectID' source='/datadict/plainnof?Category=dc_fitype' stext='DictionaryValue' svalue='DictionaryID')
          label.form-group.my-form-group 
            jason-select(placeholder='收入支出类型' style="width:120px;height:34px;" ng-model='f.ProjectID' source='/datadict/plainnof?Category=dc_fiinouttype' stext='DictionaryValue' svalue='DictionaryID')
          label.form-group.my-form-group 
            jason-select(placeholder='' style="width:120px;height:34px;" ng-model='f.ProjectID' source='/sfms/api/project' stext='ProjectName' svalue='ID')
          label.form-group.my-form-group 
            select(placeholder='审核状态' style="width:120px;height:34px;" ng-model='f.fiStatus')
              option 待审核
              option 已审核              
              option 全部
          label.form-group.my-form-group
            a.btn.btn-sm.btn-primary(ng-click='search()')
              i.icon.icon-search   查询
            a.btn.btn-sm.btn-success(ng-href='#/sfms/financeManageAdd')
              i.icon.icon-plus 新建
            a.btn.btn-sm.btn-info(ng-click='search()' class='btn btn-sm btn-default') 
              i.icon.icon-repeat  刷新
      hr
      table.table.table-striped.table-bordered.text-center
        thead
          tr
            th 序号
            th 财务名称          
            th 财务类型
            th 输入支出类型
            th 财务金额
            th 项目名称      
            th 申请人
            th 申请时间
            th 审核状态  
            th 审核人                  
            th 审核时间
            th 备注    
            th(style="width:80px;") 操作
        tbody
          tr(ng-repeat="x in datas") 
            td {{$index+1}}
            td {{x.FIName}}            
            td {{x.FIType}}
            td {{x.InOutType}}
            td {{x.FIPrice}}            
            td {{x.ProjectName}}
            td {{x.UserName}}            
            td {{x.CreateTime}}
            td {{x.FIStatu}}
            td {{x.CheckUser}}
            td {{x.CheckTime}}
            td {{x.Remark}}            
            td
              a(href='#/sfms/financeManageCheck?ID={{x.ID}}' )
                i.icon.icon-edit 审核            
      div.pull-right
        jason-pagination(conf='paginationConf')


