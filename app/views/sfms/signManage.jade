link(rel='stylesheet', href='css/backend/backend.css')   
block content
  jason-pagecontent(action='/sfms/api/sign/count/all' conf='paginationConf')
    div.modal.fade(id="myModal",tabindex="-1",role="dialog",aria-labelleby="myModalLabel",aria-hidden="true")
            div.modal-dialog
                div.modal-content
                   div.modal-body 
                        h4.modal-title(id="myModalLabel") 签到详细信息
                          button.close(type="button",data-dismiss="modal")
                            span(aria-hidden="true")&times;      
                        br          
                        table.table.table-striped.table-bordered.text-center
                            thead
                                tr
                                    th 用户名
                                    th 签到端
                                    th 签到时间
                                    th 签到类型
                            tbody
                                tbody
                                tr(ng-repeat="data in data")
                                    td {{data.UserName}}
                                    td {{data.UserAgent}}
                                    td {{data.CreateTime}}
                                    td {{data.SignType}}
                        button.btn.btn-default(type="button",data-dismiss="modal") Close
                        
    div.page-content
      ng-form.form-inline
        span(style='font-size: 24px;')  签到统计
        div.buttons.pull-right
          label.form-group.my-form-group 
            input.form-control(type='date' ng-model='f.startTime')
          label.form-group.my-form-group 
            input.form-control(type='date' ng-model='f.endTime')
          label.form-group.my-form-group
            a.btn.btn-sm.btn-primary(ng-click='search()')
              i.icon.icon-search   查询
            a.btn.btn-sm.btn-info(ng-click='search()' class='btn btn-sm btn-default') 
              i.icon.icon-repeat  刷新
      hr
      table.table.table-striped.table-bordered.text-center
        thead
          tr
            th 序号
            th 用户名          
            th 签到总时长
            th 操作
        tbody
          tr(ng-repeat="x in datas") 
            td {{$index+1}}
            td {{x.userName}}         
            td {{x.signTime}}
            td
              a(data-toggle="modal",data-target="#myModal",ng-click="moresign(x.userID,'/sfms/api/sign/')") 
                i.icon.icon-zoom-in  更多

            
      div.pull-right
        jason-pagination(conf='paginationConf')