link(rel='stylesheet', href='css/backend/backend.css')   
block content
  jason-pagecontent(action='/app' conf='paginationConf')
    div.modal.fade(id="myModal",tabindex="-1",role="dialog",aria-labelleby="myModalLabel",aria-hidden="true")
            div.modal-dialog
                div.modal-content
                   div.modal-body 
                        h4.modal-title(id="myModalLabel") 项目人员
                          button.close(type="button",data-dismiss="modal")
                            span(aria-hidden="true")&times;                
                        table.table.table-striped.table-bordered.text-center
                            thead
                                tr
                                    th 成员姓名
                                    th 成员职能
                            tbody
                                tbody
                                tr(ng-repeat="data in data")
                                    td {{data.UserName}}
                                    td {{data.Duty}}
                        button.btn.btn-default(type="button",data-dismiss="modal") Close
                        
    div.page-content
      ng-form.form-inline
        span(style='font-size: 24px;')  签到管理
        div.buttons.pull-right
          label.form-group.my-form-group 
            jason-select(placeholder='应用名称' style="width:120px;" ng-model='f.ID' source='/app' stext='ApplicationName' svalue='ID')
          label.form-group.my-form-group
            a.btn.btn-sm.btn-primary(ng-click='search()')
                            i.icon.icon-search   查询
            a.btn.btn-sm.btn-success(ng-href='#/backend/applicationinfo')
              i.icon.icon-plus 新建
            button(ng-click='search()' class='btn btn-sm btn-default') 
              i.icon.icon-repeat  刷新
      hr
      table.table.table-striped.table-bordered.text-center
        thead
          tr
            th 应用ID
            th 应用代码          
            th 应用名称
            th 应用备注
            th 操作
        tbody
          tr(ng-repeat="x in datas") 
            td {{x.ID}}
            td {{x.ApplicationCode}}            
            td {{x.ApplicationName}}
            td {{x.Memo}}
            td
              a(data-toggle="modal",data-target="#myModal",ng-click="moreproject($index,'/sfms/api/projectuser')") 
                i.icon.icon-zoom-in  更多

            
      div.pull-right
        jason-pagination(conf='paginationConf')





