extends shared/layout
//- 登陆界面
block content
  div.login
    div.navbar
      ul.nav.navbar-nav
        li
          img(src='imgs/logo_school.png')
        li 
          h3  <strong>实验室管理系统</strong>


    div.container.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      
      h2.form-signin-heading 用户登录 
      form.form-signin(name='signUpForm' ng-controller="formController") 
        div.form-group 
          label  用户名 ：
          input(type="text" name='username' class="form-control" placeholder="请输入用户名" ng-minlength='4' ng-model="userdata.username" required autofocus)
          p.error(ng-if='signUpForm.username.$touched && signUpForm.username.$error.minlength' ) 用户名至少4位
        div.form-group        
          label  密码 ：
          input(type="password" name='password' class="form-control" placeholder="请输入密码" ng-minlength='6' ng-maxlength='12' ng-model="userdata.password" required)
          p.error(ng-if='(signUpForm.password.$error.minlength || signUpForm.password.$error.maxlength )&& signUpForm.password.$touched') 密码输入6-12位
        div.form-group( ng-init="codeSrc = '/generatecode'")  
          label  验证码 ：
          br          
          input(type="text" class="form-control pin_code" name='code' ng-model="userdata.code" ng-minlength='4' ng-maxlength='4' placeholder="请输入右侧图片的验证码" required)
          img(ng-src="{{codeSrc}}" ng-click = 'changeCode()')
          p.error(ng-if='(signUpForm.code.$error.minlength || signUpForm.code.$error.maxlength )&& signUpForm.code.$touched' ) 验证码输入4位
        div.form-group 
          input(type='checkbox')
          span  Remember me   
          button.btn.btn-lg.btn-primary.pull-right(type="submit" ng-click="submit(userdata)") 登  录



    include shared/footer.jade