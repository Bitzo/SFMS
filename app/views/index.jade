extends shared/layout

block content
  div.container-fluid
    form(method="post",name="roleAddForm",ng-submit="addRole()") 
      table.table.table-bordered.table-hover.definedwidth.m10
        tr
          td(width="15%",class="tableleft") 应用ID
          td
            input(type="text",name="applicationId",ng-model="applicationId",ng-minlength="3",ng-maxlength=10,required)
            &nbsp&nbsp
            span.error(ng-show="roleAddForm.applicationId.$dirty &&roleAddForm.applicationId.$invalid")
              small.error(ng-show="roleAddForm.applicationId.$error.minlength") 角色名称至少三位
              small.error(ng-show="roleAddForm.applicatonId.$error.maxlength") 角色名称最多十位
         tr
          td(width="15%",class="tableleft") 角色名称
          td
            input(type="text",name="roleName",ng-model="roleName",ng-minlength="3",ng-maxlength=10,required)
            &nbsp&nbsp
            span.error(ng-show="roleAddForm.roleName.$dirty &&roleAddForm.roleName.$invalid")
              small.error(ng-show="roleAddForm.roleName.$error.minlength") 角色名称至少三位
              small.error(ng-show="roleAddForm.roleName.$error.maxlength") 角色名称最多十位
         tr
          td(width="15%",class="tableleft") 角色号
          td
            input(type="text",name="roleCode",ng-model="roleCode",ng-minlength="3",ng-maxlength=10,required)
            &nbsp&nbsp
            span.error(ng-show="roleAddForm.roleCode.$dirty &&roleAddForm.roleCode.$invalid")
              small.error(ng-show="roleAddForm.roleCode.$error.minlength") 角色名称至少三位
              small.error(ng-show="roleAddForm.roleName.$error.maxlength") 角色名称最多十位
        tr
          td(class="tableleft") 是否有效
          td
            input(type="radio",name="isActive",value="1",checked) 
            有效
            &nbsp&nbsp&nbsp
            input(type="radio",name="isActive",value="0")
            无效 
        tr
          td(class="tableleft") 权限树
          td(class="tree well")
            ul
              li
                  span
                    i(class="icon-folder-open")
                  input(type="checkbox",value="")
                  权限
                  ul
                    li
                      i(class="icon-leaf")  
                        input(type="checkbox",value="1")
                        权限列表
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="2")
                        添加权限
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="3")
                        编辑权限
                     li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="4")
                        删除权限
              li
                  span
                    i(class="icon-folder-open")
                  input(type="checkbox",value="")
                  角色
                  ul
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="5")
                        角色列表
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="6")
                        添加角色
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="7")
                        编辑角色
                     li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="8")
                        删除角色
      
              li
                  span
                    i(class="icon-folder-open")
                  input(type="checkbox",value="")
                  用户
                  ul
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="9")
                        用户列表
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="10")
                        添加用户
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="11")
                        编辑用户
                     li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="12")
                        删除用户
              li
                  span
                    i(class="icon-folder-open")
                  input(type="checkbox",value="")
                  菜单
                  ul
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="13")
                        菜单列表
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="14")
                        添加菜单
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="15")
                        编辑菜单
                     li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="16")
                        删除菜单
              li
                  span
                    i(class="icon-folder-open")
                  input(type="checkbox",value="")
                  功能点
                  ul
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="17")
                        功能点列表
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="18")
                        添加功能点
                    li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="19")
                        编辑功能点
                     li
                      i(class="icon-leaf") 
                        input(type="checkbox",value="20")
                        删除功能点
        tr
          td(class="tableleft")
          td 
            button.btn.btn-primary(type="submit",ng-disabled="roleAddForm.$invalid") 添加
            &nbsp&nbsp&nbsp&nbsp
            button.btn.btn-success(type="button",id="backid",name="backid") 返回列表


 
 
  

  script(src="js/roleAdd.js")      
 
  include shared/login/footer.jade