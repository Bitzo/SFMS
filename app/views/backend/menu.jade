link(rel='stylesheet', href='css/backend/backend.css')   
block content
  jason-pagecontent(action='/backmenu/plain' conf='paginationConf')
    div.page-content
      ng-form.form-inline
        span(style='font-size: 24px;') 菜单管理
        div.buttons.pull-right
          label.form-group.my-form-group
            jason-select.form-control(placeholder='应用名称'  style="width:120px;height:34px;" ng-model='f.ApplicationID' source='/app' stext='ApplicationName' svalue='ID')
          label.form-group.my-form-group
            jason-select.form-control(placeholder='菜单名称'  style="width:120px;height:34px;" ng-model='f.MenuID' source='/backmenu/plain' stext='MenuName' svalue='MenuID')
          label.form-group.my-form-group
            a.btn.btn-sm.btn-primary(ng-click='search()')
              i.icon.icon-search   查询
            a.btn.btn-sm.btn-success(ng-href='#/backend/menuinfo')
              i.icon.icon-plus 新建
            button(ng-click='search()' class='btn btn-sm	 btn-default') 
              i.icon.icon-repeat  刷新
      hr
      table.table.table-striped.table-bordered.text-center
        thead.text-center 
          tr  
            th 序号 
            th 应用名称
            th 菜单名称
            th 菜单路径
            th 操作
        tbody
          tr(ng-repeat="x in datas")
            td {{$index+1}}
            td {{x.ApplicationName}}
            td {{x.MenuName}}
            td {{x.Url}} 
            td
              a(href='#/backend/menuedit/?MenuID={{x.MenuID}}' )
                i.icon.icon-edit 编辑
              a(ng-click="remove($index,'/backmenu')")
                i.icon.icon-trash 删除
      div.pull-right
        jason-pagination(conf='paginationConf')
