block content
    div.container-fluid(ng-controller='functionController')
        div.row
            div.col-lg-7.col-md-7.col-sm-7
                tree-grid(tree-data="tree_data" col_defs='col_defs' expand-on="expanding_property" expandOn="ApplicationID" on-click='clickHander(branch)' on-clickadd='clickHanderAdd(branch)')
            div.col-lg-4.col-md-4.col-sm-4(style='border:1px solid black')
                h4功能点编辑
                form.form-horizontal(role='form')
                    div.form-group
                        label.col-sm-2.control-label 应用ID
                        div.col-sm-10
                            jason-select.input(ng-model='currentData.ApplicationID',name='ApplicationID' source='/app' stext='ApplicationName' svalue='ID',required,ng-disabled='disable')
                    div.form-group
                        label.col-sm-2.control-label 功能名称
                        div.col-sm-10
                            input(type='text' ng-model='currentData.FunctionName',ng-disabled='disable')
                    div.form-group
                        label.col-sm-2.control-label 父节点
                        div.col-sm-10
                            input(type='text' ng-model='currentData.ParentID',ng-disabled='disable')
                    div.form-group.row.text-center
                        button.btn.btn-primary(ng-click='edit()') 编辑
                        button.btn.btn-primary(style='margin-left:20px;')取消