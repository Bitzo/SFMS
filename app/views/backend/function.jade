block content
    script(type="text/ng-template" id="tree_node")
        tr(tt-node is-branch="node.type=='folder'")
            td
                span(ng-bind="node.name")
            td(ng-bind="node.FunctionID")
            td(ng-bind="node.Memo")
            td
                a(href='#/backend/functionEdit/?FunctionID={{node.FunctionID}}' )
                    i.icon.icon-edit 编辑
                a(ng-click="remove($index,'/backendfunc')")
                    i.icon.icon-trash 删除
                a(href='#/backend/functionAdd/')
                    i.icon.icon-trash 增加

    table(tt-table tt-params="expanded_params")
        thead
            tr
                th 应用/功能点名称
                th 功能点号
                th 备注
                th 操作
        tbody

    