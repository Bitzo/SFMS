link(rel='stylesheet' href="css/backend/role.css")
block content
  div.container-fluid
    span 
      h2 用户新增
    form(method="post"  name="userInfo" ng-controller="selectController")
      table.table.table-bordered.table-hover.definedwidth.m10
        tr
          td(width="15%",class="tableleft") 应用名称
          td      
            select(ng-model='formdata.ApplicationID',name='ApplicationID')
              option   
              option(ng-repeat="item in applicationNames" value='{{item.ID}}') {{item.ApplicationName}}
            
        tr
          td(width="15%",class="tableleft") 用户姓名 
          td
            input(type="textview",name="UserName",ng-model='formdata.UserName',ng-maxlength='11',required)
            &nbsp&nbsp
            small.error(ng-if="userInfo.UserName.$error.maxlength && userInfo.UserName.$touched") 用户姓名最多11位
           
        tr
          td(width="15%",class="tableleft") 密码 
          td
            input(type="password",name="Pwd",ng-model="formdata.Pwd",ng-maxlength='50',required)
            &nbsp&nbsp
            small.error(ng-if="userInfo.Pwd.$error.maxlength && userInfo.Pwd.$touched") 密码最多50位
           
        tr
          td(width="15%",class="tableleft") 账户名 
          td
            input(type="textview",name="Account",ng-model="formdata.Account",ng-maxlength='50',required)
            &nbsp&nbsp
            small.error(ng-if="userInfo.Account.$error.maxlength && userInfo.Account.$touched") 账户最多50位
        
         tr
          td(width="15%",class="tableleft") 角色名称
          td
            select(ng-model='formdata.RoleID',name="RoleID")
              option   
              option(ng-repeat="item in roleNames" value='{{item.RoleID}}' ) {{item.RoleName}}
        tr
          td(class="tableleft") 是否有效
          td
            input(type="radio",name="IsActive",value="1",ng-model="formdata.IsActive",checked,style="width:15px;height:15px")
            &nbsp有效
            &nbsp&nbsp          
            input(type="radio",name="IsActive",ng-model="formdata.IsActive",value="0",style="width:15px;height:15px")
            &nbsp无效

        tr
          td(width="15%",class="tableleft") 手机号码 (可选) 
          td
            input(type="phone",name="Phone",ng-model="formdata.Phone",ng-maxlength='11')
            &nbsp&nbsp
            small.error(ng-if="userInfo.Phone.$error.maxlength && userInfo.Phone.$touched") 电话号码11位
        
        tr
          td(width="15%",class="tableleft") 邮箱 (可选)
          td
            input(type="email",name="Email",ng-model='formdata.Email',ng-maxlength='50')
            &nbsp&nbsp
            small.error(ng-if="formdata.Email.$error.maxlength && formdata.Email.$touched") 请填写正确的邮箱地址
                  
        tr
          td(width="15%",class="tableleft") 所在学院 (可选) 
          td
            select(ng-model='formdata.CollegeID' ng-change= "collegeChanged()")
              option   
              option(ng-repeat="item in college" value='{{item.DictionaryID}}') {{item.DictionaryValue}}

        tr
          td(width="15%",class="tableleft") 所在班级 (可选)  
          td
            select(ng-model='formdata.ClassID')
              option(ng-repeat="item in cls" value='{{item.DictionaryID}}') {{item.DictionaryValue}})

        tr
          td(width="15%",class="tableleft") 地址 (可选) 
          td
            textarea(type="textview",rows="2",cols="30",name="Address",ng-model="formdata.Address",ng-maxlength='200')
            &nbsp&nbsp
            small.error(ng-if="userInfo.Address.$error.maxlength && userInfo.Address.$touched") 填写地址

        tr
          td(width="15%",class="tableleft") 备注 (可选)  
          td
            textarea(type="textview",rows="5",cols="30",name="Memo",ng-model='formdata.Memo',ng-maxlength='200')
            &nbsp&nbsp
            small.error(ng-if="userInfo.Memo.$error.maxlength && userInfo.Memo.$touched") 填写备注   

        tr
          td(class="tableleft")
          td
            button.btn.btn-sm.btn-primary(type="submit",ng-click="addnew(formdata,'/backuser')") 添加
 
            &nbsp&nbsp&nbsp&nbsp
            a.btn.btn-sm.btn-success(href='#backend/user') 返回列表




      