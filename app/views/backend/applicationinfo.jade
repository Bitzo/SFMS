link(rel='stylesheet' href="css/backend/role.css")
block content
  div.container-fluid(action='/backmenu' conf='paginationConf')
    span 
      h2 应用新增
    form(method="post",name="appinfo" )
      table.table.table-bordered.table-hover.definedwidth.m10
        tr
          td(width="15%",class="tableleft") 应用代码
          td
            input(type="textview",name="ApplicationCode",ng-model='formdata.ApplicationCode',ng-maxlength='50',required)
            &nbsp&nbsp
            small.error(ng-show="formdata.ApplicationCode.$error.maxlength && formdata.ApplicationCode.$touched") 应用代码最多50位

           
        tr
          td(width="15%",class="tableleft") 	应用名称 
          td
            input(type="textview",name="ApplicationName",ng-model="formdata.ApplicationName",ng-maxlength='50',required)
            &nbsp&nbsp
            small.error(ng-show="formdata.ApplicationName.$error.maxlength && formdata.ApplicationName.$touched") 应用名称最多50位
        
        tr
          td(class="tableleft") 是否有效
          td
            input(type="radio",name="IsActive",value="1",style="width:15px;height:15px",ng-model="formdata.IsActive",checked)
            &nbsp有效
            &nbsp&nbsp          
            input(type="radio",name="IsActive",ng-model="formdata.IsActive",value="0",style="width:15px;height:15px")
            &nbsp无效  

        tr
          td(width="15%",class="tableleft") 	备注（可选） 
          td
            textarea(type="textview",rows="5",cols="30",name="Memo",ng-model='formdata.Memo',ng-maxlength='200')
            &nbsp&nbsp
            small.error(ng-show="formdata.Memo.$error.maxlength && formdata.Memo.$touched") 备注最多200位

        tr
          td(class="tableleft")
          td
            button.btn.btn-sm.btn-primary(type="submit",ng-click="addnew(formdata,'/app')") 添加
            &nbsp&nbsp&nbsp&nbsp
            a.btn.btn-sm.btn-success(href='#backend/application') 返回列表




      