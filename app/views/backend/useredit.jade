link(rel='stylesheet' href="css/backend/role.css")
block content
  div.container-fluid
    span 
      h2 用户编辑
   jason-form(method="post",source='/backuser' conf='paginationConf' tocc="ApplicationID,ApplicationName,RoleName")
      table.table.table-bordered.table-hover.definedwidth.m10
        tr
          td(width="15%",class="tableleft") 应用名称
          td
            jason-select.input(ng-model='paginationConf.formdata.ApplicationID', source='/app' stext='ApplicationName' svalue='ID',style="width:160px;height:30px",required) 
            
        tr
          td(width="15%",class="tableleft") 用户姓名 
          td
            input(type="textview",name="UserName",ng-model='paginationConf.formdata.UserName',ng-maxlength='11',style="width:160px;height:30px",required)
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.UserName.$error.maxlength && paginationConf.formdata.UserName.$touched") 用户姓名最多11位
            
        tr
          td(width="15%",class="tableleft") 密码 
          td
            input(type="password",name="Pwd",ng-model="paginationConf.formdata.Pwd",ng-maxlength='50',style="width:160px;height:30px",required)
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.Pwd.$error.maxlength && paginationConf.formdata.Pwd.$touched") 密码最多50位
           
        tr
          td(width="15%",class="tableleft") 账户名 
          td
            input(type="textview",name="Account",ng-model="paginationConf.formdata.Account",ng-maxlength='50',style="width:160px;height:30px",required)
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.Account.$error.maxlength && paginationConf.formdata.Account.$touched") 账户最多50位

        tr
          td(width="15%",class="tableleft") 角色名称
          td
            jason-select.input(ng-model='paginationConf.formdata.RoleID' source='/backrole' stext='RoleName' svalue='RoleID',style="width:160px;height:30px",required)

        tr
          td(class="tableleft") 是否有效
          td
            input(type="radio",name="IsActive",value="1",ng-model="paginationConf.formdata.IsActive",checked)
            &nbsp有效
            &nbsp&nbsp          
            input(type="radio",name="IsActive",ng-model="paginationConf.formdata.IsActive",value="0")
            &nbsp无效
        
        tr
          td(width="15%",class="tableleft") 手机号码 (可选) 
          td
            input(type="phone",name="Phone",ng-model="paginationConf.formdata.Phone",ng-maxlength='11',style="width:160px;height:30px")
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.Phone.$error.maxlength && paginationConf.formdata.Phone.$touched") 电话号码11位

        tr
          td(width="15%",class="tableleft") 邮箱 (可选)
          td
            input(type="textview",name="roleCode",ng-model='paginationConf.formdata.Email',ng-maxlength='50',style="width:160px;height:30px")
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.Email.$error.maxlength && paginationConf.formdata.Email.$touched") 请填写正确的邮箱地址   
           
        tr
          td(width="15%",class="tableleft") 所在学院 (可选) 
          td

            jason-select.input(ng-model='paginationConf.formdata.CollegeID',source='/datadict/plain' selectparams='{"Category":"dc_academy"}' stext='DictionaryValue' svalue='Category', style="width:160px;height:30px",required)

        tr
          td(width="15%",class="tableleft") 所在班级 (可选)  
          td
            jason-select.input(ng-model='paginationConf.formdata.ClassID',source='/datadict/plain' selectparams='{"Category":"dc_cls"}' stext='DictionaryValue' svalue='Category', style="width:160px;height:30px",required)

        tr
          td(width="15%",class="tableleft") 地址 (可选) 
          td
            textarea(type="textview",rows="2",cols="30",name="Address",ng-model="paginationConf.formdata.Address",ng-maxlength='200')
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.Address.$error.maxlength && paginationConf.formdata.Address.$touched") 填写地址

        tr
          td(width="15%",class="tableleft") 备注 (可选)  
          td
            textarea(type="textview",rows="5",cols="30",name="Memo",ng-model='paginationConf.formdata.Memo',ng-maxlength='200')
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.Memo.$error.maxlength && paginationConf.formdata.Memo.$touched") 填写备注    

        tr
          td(class="tableleft")
          td
            button.btn.btn-sm.btn-primary(type="submit",ng-click="newedit(paginationConf.formdata,'/backuser')") 确认修改
            &nbsp&nbsp&nbsp&nbsp
            a.btn.btn-sm.btn-success(href='#backend/user') 返回列表


include ../shared/footer.jade  
      