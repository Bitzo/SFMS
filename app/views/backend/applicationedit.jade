link(rel='stylesheet' href="css/backend/role.css")
block content
  div.container-fluid
    span 
      h2 应用编辑
   jason-form(method="post",source='/app' conf='paginationConf')
      table.table.table-bordered.table-hover.definedwidth.m10
        tr
          td(width="15%",class="tableleft") 应用代码
          td
            input(type="textview",name="ApplicationCode",ng-model='paginationConf.formdata.ApplicationCode',ng-maxlength='50',required)
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.ApplicationCode.$error.maxlength && paginationConf.formdata.ApplicationCode.$touched") 应用代码最多50位

           
        tr
          td(width="15%",class="tableleft") 	应用名称 
          td
            input(type="textview",name="ApplicationName",ng-model="paginationConf.formdata.ApplicationName",ng-maxlength='50',required)
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.ApplicationName.$error.maxlength && paginationConf.formdata.ApplicationName.$touched") 应用名称最多50位

        tr
          td(class="tableleft") 是否有效
          td
            input(type="radio",name="IsActive",value="1",ng-model="paginationConf.formdata.IsActive",style="width:15px;height:15px",checked)
            &nbsp有效
            &nbsp&nbsp          
            input(type="radio",name="IsActive",ng-model="paginationConf.formdata.IsActive",style="width:15px;height:15px",value="0")
            &nbsp无效   

        tr
          td(width="15%",class="tableleft") 	备注（可选） 
          td
            textarea(type="textview",rows="5",cols="30",name="Memo",ng-model='paginationConf.formdata.Memo',ng-maxlength='200')
            &nbsp&nbsp
            small.error(ng-show="paginationConf.formdata.Memo.$error.maxlength && paginationConf.formdata.Memo.$touched") 备注最多200位
         
        tr
          td(class="tableleft")
          td
            button.btn.btn-sm.btn-primary(type="submit",ng-click="newedit(paginationConf.formdata,'/app')") 确认修改
            &nbsp&nbsp&nbsp&nbsp
            a.btn.btn-sm.btn-success(href='#backend/application') 返回列表




      